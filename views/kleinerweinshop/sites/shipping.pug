script(type='text/template', id='shipping-template')
  div#header
    div#logo
      img(src='/images/logo.png')
    div#navi
      i(class='fa fa-bars')
    div.navi
      a#toindex
        span Startseite
      a#toshop
        span Einkaufen
      a#toinfo
        span Steckbrief
      a#tocart
        span Warenkorb 
          span#count (<%-User.get('shoppingcart').length%>)
  div.content#form
    i#back(class='fa fa-back')
    h2 Lieferadresse
    div.input
      label Vorname
      input(name='firstname' value!='<%-firstname%>')
    div.input
      label Nachname
      input(name='lastname' value!='<%-lastname%>')
    div.input
      label E-Mail
      input(name='email' value!='<%-email%>')
    div.input
      label Stra√üe, Nummer
      input(name='street' value!='<%-street%>')
    div.input
      label PLZ
      input(name='zip' value!='<%-zip%>')
    div.input
      label Stadt
      input(name='town' value!='<%-town%>')
    div.input
      label Land
      select(name='country')
        option(name='Germany') Deutschland
    div.input.check
      label Ich habe die 
        a(href='/agb' target='_blank') AGB
        label  gelesen und bin damit einverstanden.
      input(type='checkbox' name='agb')
    button#next Weiter
  include ../models/footer.pug
